<p class="hidden-alert" id="duplication-alert">This artist has already been added.</p>
<p class="hidden-alert" id="unfound-artist-alert">This artist was not found.</p>
<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
		<% if current_user %>
			<%= form_for @band, class: "new-band" do |f| %>
				<%= f.label :name, :style => "display: none;"%>
				<%= f.text_field :name, class: "band-name btn btn-lg btn-block", placeholder: "Enter an artist's name..."%>
				<%= f.submit "add artist", :style => "display: none;" %>
			<% end %><br><br>
			<%= render current_user.bands %>
		<% else %>
			<%= form_for @band, method: "GET", url: { controller: "sessions", action: "new" },  :html => {:class => "fake_band"} do |f| %>
				<%= f.label :name, :style => "display: none;"%>
				<%= f.text_field :name, class: "band-name btn btn-lg btn-block", placeholder: "Enter an artist's name..."%>
				<%= f.submit "add artist", :style => "display: none;" %>
			<% end %><br><br>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
		<section>
			<ul class="band-list">

			</ul>
		</section>
</div>



